rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: Can only read/write their own document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Shared resources: Authenticated users can read
    match /clients/{clientId} {
      allow read: if isSignedIn();
      // To-do: Add write access for specific roles if needed
    }

    match /venueOS_modules/{moduleId} {
       allow read: if isSignedIn();
    }

    match /templates/{templateId} {
       allow read: if isSignedIn();
    }
    
    // Proposals:
    // - Authenticated users can create proposals
    // - Only the assigned sales agent can read/update/delete
    match /proposals/{proposalId} {
      allow read, update, delete: if isSignedIn() && resource.data.salesAgentId == request.auth.uid;
      allow create: if isSignedIn();

      // Comments sub-collection: 
      // Allow any authenticated user to read/write comments on a proposal.
      // This allows both clients and sales agents to collaborate.
      match /comments/{commentId} {
        allow read, write: if isSignedIn();
      }

      // Suggested Edits sub-collection:
      // - Any authenticated user can create a suggestion (client)
      // - Only the sales agent can update (accept/reject)
      match /suggested_edits/{editId} {
        allow create: if isSignedIn();
        allow read, update: if isSignedIn() && get(/databases/$(database)/documents/proposals/$(proposalId)).data.salesAgentId == request.auth.uid;
      }
    }
  }
}
