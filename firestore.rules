rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Shared resources that any authenticated user can read
    match /{collection}/{docId} where collection in ['clients', 'venueOS_modules', 'content_library'] {
      allow read: if request.auth != null;
      allow write: if false; // These are considered read-only for now
    }
    
    // Proposals
    match /proposals/{proposalId} {
      // Allow create, read, update, delete if the user is the sales agent for the proposal
      allow read, delete: if request.auth != null && resource.data.salesAgentId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.salesAgentId == request.auth.uid;
      allow update: if request.auth != null; // Allow any authenticated user to update (e.g., for comments or status)

      // Comments subcollection
      match /comments/{commentId} {
        // Any authenticated user can read comments and create new ones
        allow read, create: if request.auth != null;
        // Only the author of a comment can update or delete it (future-proofing)
        allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
      }
    }
  }
}
