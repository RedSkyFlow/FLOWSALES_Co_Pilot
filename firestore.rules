rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isUserAuthenticated() {
      return request.auth != null;
    }

    function getRequestingUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isUserInTenant(tenantId) {
      return isUserAuthenticated() && getRequestingUserData().tenantId == tenantId;
    }

    function isUserRole(role) {
      return isUserAuthenticated() && getRequestingUserData().role == role;
    }

    // Matches any document in the 'users' collection.
    // Users can read/write their own data.
    match /users/{userId} {
      allow read, update: if isUserAuthenticated() && request.auth.uid == userId;
      allow create: if isUserAuthenticated();
    }
    
    // Multi-tenant data structure
    match /tenants/{tenantId} {
    
      // Allow tenant document reads for its members
      allow get: if isUserInTenant(tenantId);

      // Clients can be managed by any user within the tenant
      match /clients/{clientId} {
        allow read, write: if isUserInTenant(tenantId);
      }

      // Proposals can only be accessed by the assigned agent
      match /proposals/{proposalId} {
        allow read, write: if isUserAuthenticated() && request.auth.uid == resource.data.salesAgentId;
        
        // Comments and edits can be made by authenticated users, 
        // with more granular logic handled in backend functions.
        match /comments/{commentId} {
            allow read, write: if isUserAuthenticated();
        }
        match /suggested_edits/{editId} {
            allow read, write: if isUserAuthenticated();
        }
      }

      // Templates can be read by any user in the tenant, but only managed by admins.
      match /proposal_templates/{templateId} {
        allow read: if isUserInTenant(tenantId);
        allow write: if isUserInTenant(tenantId) && isUserRole('admin');
      }

      // Products can be read by any user in the tenant, but only managed by admins.
      match /products/{productId} {
        allow read: if isUserInTenant(tenantId);
        allow write: if isUserInTenant(tenantId) && isUserRole('admin');
      }
      
      // Usage and budget can be read by any user in the tenant, but only written to by backend processes (not users)
      match /usage_ledgers/{ledgerId} {
        allow read: if isUserInTenant(tenantId);
        allow write: if false; // Only backend can write
      }
    }
  }
}