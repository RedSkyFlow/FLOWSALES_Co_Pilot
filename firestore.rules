rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read and update their own user document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
    }

    // Authenticated users can read shared data like clients and modules.
    match /clients/{clientId} {
      allow read: if request.auth != null;
    }
    
    match /venueOS_modules/{moduleId} {
      allow read: if request.auth != null;
    }
    
    match /content_library/{itemId} {
      allow read: if request.auth != null;
    }

    // Proposal Rules
    match /proposals/{proposalId} {
      // Allow read/write only to the sales agent assigned to the proposal.
      // Assumes 'salesAgentId' is a field on the proposal document.
      allow read, update, delete: if request.auth.uid == resource.data.salesAgentId;
      
      // Allow creation if the user is the one creating it.
      allow create: if request.auth.uid == request.resource.data.salesAgentId;

      // Allow access for admins (requires custom claims)
      allow read, write: if request.auth.token.role == 'admin';

      // Rules for the 'comments' subcollection
      match /comments/{commentId} {
        // Allow read access to the proposal owner or an admin.
        allow read: if get(/databases/$(database)/documents/proposals/$(proposalId)).data.salesAgentId == request.auth.uid
                    || request.auth.token.role == 'admin';

        // Allow comment creation by the proposal owner, the client (via a secure function), or an admin.
        // For now, we only allow the agent/admin to comment directly from the app.
        allow create: if request.auth.uid == get(/databases/$(database)/documents/proposals/$(proposalId)).data.salesAgentId
                      || request.auth.token.role == 'admin';

        // Comments are immutable; they cannot be updated or deleted for audit purposes.
        allow update, delete: if false;
      }
    }
  }
}
