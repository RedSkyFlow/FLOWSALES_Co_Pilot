rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read and write their own document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Authenticated users can read shared data
    match /clients/{clientId} {
      allow read: if request.auth != null;
    }

    match /venueOS_modules/{moduleId} {
      allow read: if request.auth != null;
    }

    // Proposals can only be accessed by the assigned sales agent
    match /proposals/{proposalId} {
      allow read, update, delete: if request.auth.uid == resource.data.salesAgentId;
      allow create: if request.auth.uid == request.resource.data.salesAgentId;

      // Anyone authenticated can read comments (clients + agents)
      // Anyone authenticated can create comments
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
      }

      // Anyone authenticated can create suggestions
      // Only the sales agent can update (accept/reject) a suggestion
      match /suggested_edits/{editId} {
        allow read, create: if request.auth != null;
        allow update: if request.auth.uid == get(/databases/$(database)/documents/proposals/$(proposalId)).data.salesAgentId;
      }
    }
  }
}
