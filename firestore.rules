rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can read clients and modules, but not write
    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false; // Or add admin/specific logic later
    }

    match /venueOS_modules/{moduleId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false; // These should be managed by an admin
    }
    
    match /content_library/{contentId} {
      allow read: if request.auth != null;
      allow create, update, delete: if false; // These should be managed by an admin
    }

    // Proposals can only be accessed by the assigned sales agent
    match /proposals/{proposalId} {
      allow read, update, delete: if request.auth != null && resource.data.salesAgentId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.salesAgentId == request.auth.uid;
    }
  }
}
