
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only read/write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Proposals can be created by any authenticated user.
    // Only the user who created the proposal (owner) can read, update, or delete it.
    match /proposals/{proposalId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.agent.uid == request.auth.uid;
    }

    // Templates and Clients can be read by any authenticated user, but not modified.
    // This assumes they are managed by an admin through the Firebase console or a separate interface.
    match /templates/{templateId} {
      allow read: if request.auth != null;
      allow write: if false; // Or add admin-only logic here
    }

    match /clients/{clientId} {
      allow read: if request.auth != null;
      allow write: if false; // Or add admin-only logic here
    }
  }
}
