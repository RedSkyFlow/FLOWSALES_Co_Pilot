rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // This assumes you have set a custom claim 'role' on your users
      // You can do this with the Firebase Admin SDK
      return request.auth.token.role == 'admin';
    }

    // USERS
    match /users/{userId} {
      // A user can read their own document
      allow read: if isOwner(userId);
      // A user can create their own document upon signup
      allow create: if isOwner(userId);
      // A user can update their own document
      allow update: if isOwner(userId);
      // Users cannot delete their own accounts from the client
      allow delete: if false;
    }

    // PROPOSALS
    match /proposals/{proposalId} {
      // Allow read access if the user is the assigned sales agent
      allow read: if isAuth() && resource.data.salesAgentId == request.auth.uid;
      
      // Allow create access to any authenticated user (sales agent)
      // The salesAgentId should be set to the creator's UID on the client
      allow create: if isAuth() && request.resource.data.salesAgentId == request.auth.uid;

      // Allow update if the user is the owner
      allow update: if isAuth() && resource.data.salesAgentId == request.auth.uid;
      
      // Allow delete if the user is the owner
      allow delete: if isAuth() && resource.data.salesAgentId == request.auth.uid;

      // COMMENTS SUBCOLLECTION
      match /comments/{commentId} {
        // Allow read access to the proposal owner or an admin.
        allow read: if get(/databases/$(database)/documents/proposals/$(proposalId)).data.salesAgentId == request.auth.uid
                    || isAdmin();

        // Allow comment creation by the proposal owner or an admin.
        allow create: if request.auth.uid == get(/databases/$(database)/documents/proposals/$(proposalId)).data.salesAgentId
                      || isAdmin();

        // Comments are immutable; they cannot be updated or deleted for audit purposes.
        allow update, delete: if false;
      }
    }

    // SHARED RESOURCES (Read-only for any authenticated user)
    match /clients/{clientId} {
      allow read, write: if isAuth();
    }
    
    match /venueOS_modules/{moduleId} {
       allow read, write: if isAuth();
    }

    match /content_library/{contentId} {
       allow read, write: if isAuth();
    }
  }
}
